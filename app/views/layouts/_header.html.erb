<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container d-flex flex-center">
        <%= link_to t("sample_app"), "#", id: "logo" %>
        <div>
          <%= link_to t("english"), locale:"en" %> |
          <%= link_to t("vietnamese"), locale:"vi" %>
        </div>
        <nav>
          <ul class="nav navbar-nav navbar-right d-flex flex-center">
            <li><%= link_to t("home"), static_pages_home_path %></li>
            <li><%= link_to t("help"), static_pages_help_path %></li>

            <% if logged_in? %>
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("log_out"), logout_path, data: { "turbo-method": :delete } %></li>
            <% else %>
              <li><%= link_to t("log_in"), login_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>
</header>
